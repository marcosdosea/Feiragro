<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FeiragroWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FeiragroWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #299742;">
            <div class="container-fluid">
                <a class="f-logo-text mx-5" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="f-input-text-search-root col-4 me-4">
                        <input type="search" placeholder="Pesquisar" class="f-input-text-search">
                        <div id="f-input-icon-search"></div>
                    </div>
                    <ul class="navbar-nav ms-auto me-4">
                        <li class="nav-item ">
                            <div id="f-icon-localizacao" class="f-icon-navbar"></div>
                        </li>
                        <li class="nav-item me-2 hide-nome-navbar">
                            <a class="nav-link text-white">Onde você está?</a>
                        </li>
                        <li class="nav-item ">
                            <div id="f-icon-avatar" class="f-icon-navbar"></div>
                        </li>
                        <li class="nav-item me-2 hide-nome-navbar">
                            <a class="nav-link text-white">Minha conta</a>
                        </li>
                        <li class="nav-item ">
                            <div id="f-icon-carrinho" class="f-icon-navbar"></div>
                        </li>
                        <li class="nav-item me-2 pagamento">
                            <a class="nav-link text-white">R$ 0,00</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <partial name="_LoginPartial" />
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FeiragroWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Associacao" asp-action="Index">Associacao</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pessoa" asp-action="Index">Pessoa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TipoProduto" asp-action="Index">TipoProdutos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Feira" asp-action="Index">Feiras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="f-main">
            @RenderBody()
        </main>
    </div>

    <footer class="f-footer" >
        <div class="f-footer-root">
            <div class="f-logo-div">
                <div class="f-logo-image"></div>
            </div>
            <section class="f-footer-section">
                <div class="f-footer-div">
                    <h3>Institucional</h3>
                    <ul>
                        <li><a href="#">Quem somos</a></li>
                        <li><a href="#">Nossa Equipe</a></li>
                        <li><a href="#">Parceiros e apoio</a></li>
                    </ul>
                </div>
                <div class="f-footer-div">
                    <h3>Contato</h3>
                    <ul>
                        <li><a href="#">E-mail</a></li>
                        <li><a href="#">Telefone</a></li>
                        <li><a href="#">Instagram</a></li>
                    </ul>
                </div>
                <div class="f-footer-div">
                    <h3>Termos e Políticas</h3>
                    <ul>
                        <li><a href="#">Termos de uso do site</a></li>
                        <li><a href="#">Políticas de privacidade</a></li>
                        <li><a href="#">Políticas de cookies</a></li>
                    </ul>
                </div>
            </section>
        </div>
        <div class="f-copy-right">
            &copy; 2023 - Feiragro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
